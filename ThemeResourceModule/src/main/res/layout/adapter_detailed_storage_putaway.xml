<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="UID : "
                style="@style/normalTextStyleRed"
                app:layout_constraintStart_toStartOf="@+id/text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtPalletIdDetailStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14443"
                style="@style/normalTextStyleRed"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="1dp"
                android:background="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/txtPalletIdDetailStorage" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:text="Item Code : "
                style="@style/normalTextStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty:"
                style="@style/normalTextStyle"
                app:layout_constraintStart_toStartOf="@+id/text"
                app:layout_constraintTop_toBottomOf="@+id/text" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batch : "
                style="@style/normalTextStyle"
                app:layout_constraintStart_toStartOf="@+id/text"
                app:layout_constraintTop_toBottomOf="@+id/text2" />


            <TextView
                android:id="@+id/txtDetailedStoragePutAwayMaterialCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2100-219"
                style="@style/normalTextStyle"
                app:layout_constraintBottom_toBottomOf="@+id/text"
                app:layout_constraintStart_toEndOf="@+id/text"
                app:layout_constraintTop_toTopOf="@+id/text" />

            <TextView
                android:id="@+id/txtDetailedStoragePutAwayGRNQtyDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13X25Kg / 625Kg "
                style="@style/normalTextStyle"
                app:layout_constraintBottom_toBottomOf="@+id/text2"
                app:layout_constraintStart_toEndOf="@+id/text2"
                app:layout_constraintTop_toTopOf="@+id/text2"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/txtBatchDetailedStoragePutAwayPallets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12342134"
                style="@style/normalTextStyle"
                app:layout_constraintBottom_toBottomOf="@+id/text3"
                app:layout_constraintStart_toEndOf="@+id/text3" />

            <TextView
                android:id="@+id/txtSLocDetailedStoragePutAwayPallets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12342134"
                style="@style/normalTextStyle"
                app:layout_constraintStart_toEndOf="@+id/text111"
                app:layout_constraintTop_toBottomOf="@+id/text3" />


            <ImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/dottedicon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text111" />


            <TextView
                android:id="@+id/txtDetailedStoragePutawayDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingRight="5dp"
                android:text="Methyl Ethyl Ketone (MEK)"
                style="@style/normalTextStyleRed"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imgView"
                app:layout_constraintStart_toStartOf="@+id/text3"
                app:layout_constraintTop_toBottomOf="@+id/imgView" />

            <TextView
                android:id="@+id/text111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SLoc : "
                style="@style/normalTextStyle"
                app:layout_constraintStart_toStartOf="@+id/text3"
                app:layout_constraintTop_toBottomOf="@+id/text3" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>