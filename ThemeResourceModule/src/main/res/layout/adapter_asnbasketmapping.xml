<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CustomCardViewStyle">
        <!--      android:layout_margin="@dimen/_3sdp"-->
        <!--      app:cardBackgroundColor="#FFF"-->
        <!--      app:cardCornerRadius="10dp"-->
        <!--      app:cardElevation="4dp"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal">


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:paddingEnd="@dimen/_5sdp">


                            <TextView
                                android:id="@+id/tvDate"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7-OCT-23"
                                android:layout_marginRight="@dimen/_8sdp"
                                style="@style/highlightedTextStyle"
                                android:maxLines="1"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="100dp"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_height="wrap_content"
                                android:text="ASN Code"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:paddingStart="@dimen/_2sdp"
                                style="@style/normalTextStyle" />

                            <TextView
                                android:id="@+id/asncode"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="P271165906"
                                style="@style/normalTextStyle" />


                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="ASN Qty"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:paddingStart="@dimen/_2sdp"
                        style="@style/normalTextStyle"/>

                    <TextView
                        android:id="@+id/asn_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="181097660"
                        style="@style/normalTextStyle" />
                    <TextView
                        android:id="@+id/asn_qty_uom"
                        android:layout_marginLeft="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        style="@style/normalTextStyle" />

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="NOP: "-->
                    <!--                        style="@style/CustomTextgreyStyle"-->
                    <!--                        android:layout_marginStart="@dimen/_10sdp"/>-->

                    <!--                    <TextView-->
                    <!--                        android:id="@+id/tvLocationproddwh"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="1400 KG"-->


                    <!--                        style="@style/CustomTextStyle"/>-->


                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="PO / NOP"
                            android:layout_marginLeft="@dimen/_8sdp"
                            style="@style/normalTextStyle"/>

                        <TextView
                            android:id="@+id/po_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5113783678"

                            style="@style/normalTextStyle"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NOP: "
                            android:visibility="gone"
                            style="@style/CustomTextgreyStyle"
                            android:layout_marginStart="@dimen/_10sdp"/>

                        <TextView
                            android:id="@+id/numberofpackages"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / 1400 KG"


                            style="@style/normalTextStyle"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Inv No"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:paddingStart="@dimen/_2sdp"
                        style="@style/normalTextStyle"/>

                    <TextView
                        android:id="@+id/invoice_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="181097660"
                        style="@style/normalTextStyle" />


                </LinearLayout>



                <ImageView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layerType="software"
                    android:src="@drawable/design_dotted_red_line"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:paddingStart="@dimen/_2sdp"
                        android:text="Delivery Plant"
                        style="@style/smalllightcolorednormalTextStyle"
                        />

                    <TextView
                        android:id="@+id/part_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CJS Speciality Chemicals"
                        style="@style/smalllightcolorednormalTextStyle" />


                </LinearLayout>




            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>