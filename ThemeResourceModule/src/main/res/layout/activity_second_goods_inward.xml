<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.goodInward.activities.SecondGoodsInwardActivity">

    <include
        android:id="@+id/topNavigation"
        layout="@layout/top_navigation_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="@+id/topNavigation"
        app:layout_constraintStart_toStartOf="@+id/topNavigation"
        app:layout_constraintTop_toBottomOf="@+id/topNavigation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtGoodsInwardDate"
                style="@style/normalTextStyleRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text"
                style="@style/normalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="ASN Code : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtGoodsInwardDate" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text2"
                style="@style/normalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ASN Qty : "
                app:layout_constraintStart_toStartOf="@+id/text"
                app:layout_constraintTop_toBottomOf="@+id/text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text3"
                style="@style/normalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PO : "
                app:layout_constraintStart_toStartOf="@+id/text"
                app:layout_constraintTop_toBottomOf="@+id/text2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text4"
                style="@style/normalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoice No. : "
                app:layout_constraintStart_toStartOf="@+id/text"
                app:layout_constraintTop_toBottomOf="@+id/text3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtGoodsInwardASNCode"
                style="@style/normalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@+id/text"
                app:layout_constraintStart_toEndOf="@+id/text"
                app:layout_constraintTop_toTopOf="@+id/text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtGoodsInwardASNQty"
                style="@style/normalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@+id/text2"
                app:layout_constraintStart_toEndOf="@+id/text2"
                app:layout_constraintTop_toTopOf="@+id/text2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtGoodsInwardPO"
                style="@style/normalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@+id/text3"
                app:layout_constraintStart_toEndOf="@+id/text3"
                app:layout_constraintTop_toTopOf="@+id/text3" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtGoodsInwardInvoice"
                style="@style/normalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@+id/text4"
                app:layout_constraintStart_toEndOf="@+id/text4"
                app:layout_constraintTop_toTopOf="@+id/text4" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dottedicon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtGoodsInwardInvoice" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text6"
                style="@style/normalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Part No. : "
                app:layout_constraintStart_toStartOf="@+id/text4"
                app:layout_constraintTop_toBottomOf="@+id/imgView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtGoodsInwardPartNo"
                style="@style/normalTextStyleRed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txtGoodsInwardDate"
                app:layout_constraintStart_toEndOf="@+id/text6"
                app:layout_constraintTop_toBottomOf="@+id/imgView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text7"
                style="@style/normalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOP : "
                app:layout_constraintBottom_toBottomOf="@+id/text3"
                app:layout_constraintEnd_toStartOf="@+id/txtGoodsInwardNOP"
                app:layout_constraintTop_toTopOf="@+id/text3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtGoodsInwardNOP"
                style="@style/normalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintBottom_toBottomOf="@+id/text7"
                app:layout_constraintEnd_toStartOf="@+id/txtGoodsInwardDate"
                app:layout_constraintTop_toTopOf="@+id/text7" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        style="@style/normalTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:theme="@style/normalTextStyle"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="@+id/cardView7"
        app:layout_constraintStart_toStartOf="@+id/cardView7"
        app:layout_constraintTop_toBottomOf="@+id/cardView7"
        app:queryBackground="@android:color/transparent"
        app:queryHint="@string/search_list_id"
        app:searchIcon="@drawable/search" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srlGoodsInwardList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/btnScan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGoodsInward"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/adapter_goods_inwards_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchView" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchbtn"
        style="@style/btnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="QR Code"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnScan"
        app:layout_constraintStart_toEndOf="@+id/btnConfirmAndCreateGRN" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnScan"
        style="@style/btnStyle"
        android:text="   Scan "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/ic_qr_code_scanner_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtNoRecordsFoundGoodsInward"
        style="@style/normalTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Material Pending "
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/srlGoodsInwardList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtCount"
        style="@style/normalTextStyle"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rounded_btn_input"
        android:backgroundTint="@color/yellow"
        android:elevation="5dp"
        android:text="0"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/btnScan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnScan" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmAndCreateGRN"
        style="@style/btnConfirmStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        tools:visibility="visible"
        android:visibility="gone"
        android:text="Confirm and Create GRN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarGoodsInward"
        style="@style/progressBarStyle"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>