<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewStoragePutaway"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="7dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtStoragePutAwayDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="07-Oct-23"
                style="@style/normalTextStyleRed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="GRN No :"
                style="@style/normalTextStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtStoragePutAwayDate" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GRN Qty:"
                android:textColor="@color/grey"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/text"
                app:layout_constraintTop_toBottomOf="@+id/text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Putaway Pallets : "
                style="@style/normalTextStyle"
                app:layout_constraintStart_toStartOf="@+id/text"
                app:layout_constraintTop_toBottomOf="@+id/text2" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtStoragePutAwayGRN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5113783674123"
                style="@style/normalTextStyle"
                app:layout_constraintBottom_toBottomOf="@+id/text"
                app:layout_constraintStart_toEndOf="@+id/text"
                app:layout_constraintTop_toTopOf="@+id/text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtStoragePutAwayGRNQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1400 Kg"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/text2"
                app:layout_constraintStart_toStartOf="@+id/txtStoragePutAwayRemainingPallets"
                app:layout_constraintTop_toTopOf="@+id/text2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtStoragePutAwayPallets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12342134"
                style="@style/normalTextStyle"
                app:layout_constraintBottom_toBottomOf="@+id/text3"
                app:layout_constraintStart_toEndOf="@+id/text3"
                app:layout_constraintTop_toTopOf="@+id/text3" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dottedicon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text7" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="VN : "
                style="@style/normalTextStyle"
                app:layout_constraintStart_toStartOf="@+id/text3"
                app:layout_constraintTop_toBottomOf="@+id/imgView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtStoragePutawayVN"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CJS Speciality Chemicals"
                style="@style/normalTextStyleRed"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/txtStoragePutAwayDate"
                app:layout_constraintStart_toEndOf="@+id/text6"
                app:layout_constraintTop_toBottomOf="@+id/imgView" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining Pallets : "
                style="@style/normalTextStyle"
                app:layout_constraintStart_toStartOf="@+id/text3"
                app:layout_constraintTop_toBottomOf="@+id/text3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtStoragePutAwayRemainingPallets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                style="@style/normalTextStyle"
                app:layout_constraintBottom_toBottomOf="@+id/text7"
                app:layout_constraintStart_toEndOf="@+id/text7" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>